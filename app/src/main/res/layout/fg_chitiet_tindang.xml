<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fg_chitiet_tindang"
    android:orientation="vertical"
    tools:ignore="Orientation">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@color/white"
        android:paddingTop="50dp"
        tools:ignore="UselessParent">
        <ImageButton
            android:id="@+id/imgbtn_chitiet_tindang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/customer_circle_noborder"
            android:backgroundTint="@color/grey_background"
            android:rotation="180"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrow"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading_2_Bold_black"
            android:text="Chi Tiết Tin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/grey_background"
        android:src="@drawable/customer_line"
        tools:ignore="ContentDescription,ImageContrastCheck" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessLeaf">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_background"
            tools:ignore="UselessLeaf">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:id="@+id/recycleview_chitiet_tindang_danhsachanh"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:background="@color/white"
                android:paddingEnd="15dp">
                <TextView
                    android:id="@+id/txt_chitiet_tindang_tieude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    style="@style/Heading_3_Bold_black"
                    android:text="Tiêu đề"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_chitiet_tindang_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    style="@style/Paragraph_Regular_black"
                    android:drawableStart="@drawable/ic_mappin_20dp"
                    android:drawableTint="@color/grey_text"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Paragraph_Regular_black"
                            android:text="Tiền thuê"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_tienthue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,500,000 VNĐ/ tháng"
                            style="@style/Heading_3_Bold_black"
                            android:textColor="@color/redCD"
                            android:layout_marginTop="5dp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Paragraph_Regular_black"
                            android:text="Tiền cọc"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_tiencoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,500,000 VNĐ"
                            style="@style/Heading_3_Bold_black"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/customer_button_redborder_radius_30dp"
                    android:backgroundTint="@color/grey_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="RtlSymmetry">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_chitiet_tindang_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_user"
                        tools:ignore="ContentDescription" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_hovaTen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và Tên"
                            style="@style/Paragraph_Bold_black"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_sdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SĐT"
                            android:layout_marginTop="3dp"
                            style="@style/Paragraph_Regular_black"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/imgbtn_chitiet_tindang_call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/customer_circle_noborder"
                        android:backgroundTint="@color/red99"
                        android:padding="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/white"
                        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/btn_chitiet_tindang_datcoctruoc"
                        style="@style/Paragraph_Regular_black"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/customer_button_redborder_radius_30dp"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="0dp"
                        android:text="Đặt cọc trước"
                        app:backgroundTint="@null"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/customer_edittext_greyborder_radius_5dp"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="true"
                    android:useDefaultMargins="true">
                    <!-- Tiền điện -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bolt"
                            android:tint="@color/grey_text"
                            tools:ignore="ContentDescription,UseAppTint" />
                        <TextView
                            style="@style/SmallText_Regular_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tiền điện"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_tiendien"
                            style="@style/Paragraph_Bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="3,500 /kWh"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <!-- Tiền nước -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bolt"
                            android:tint="@color/grey_text"
                            tools:ignore="ContentDescription,UseAppTint" />
                        <TextView
                            style="@style/SmallText_Regular_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tiền nước"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_tiennuoc"
                            style="@style/Paragraph_Bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="1,500 /m³"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <!-- Tiền internet -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bolt"
                            android:tint="@color/grey_text"
                            tools:ignore="ContentDescription,UseAppTint" />
                        <TextView
                            style="@style/SmallText_Regular_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tiền internet"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_tieninternet"
                            style="@style/Paragraph_Bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="50,000 đ"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <!-- Tình trạng phòng -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bolt"
                            android:tint="@color/grey_text"
                            tools:ignore="ContentDescription,UseAppTint" />
                        <TextView
                            style="@style/SmallText_Regular_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tình trạng"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_tinhtrang"
                            style="@style/Paragraph_Bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Chưa cho thuê"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <!-- Diện tích -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bolt"
                            android:tint="@color/grey_text"
                            tools:ignore="ContentDescription,UseAppTint" />
                        <TextView
                            style="@style/SmallText_Regular_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Diện tích"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_dientich"
                            style="@style/Paragraph_Bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="20 m²"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <!-- Số lượng người ở -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            android:tint="@color/grey_text"
                            tools:ignore="ContentDescription,UseAppTint" />
                        <TextView
                            style="@style/SmallText_Regular_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Số người ở"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                        <TextView
                            android:id="@+id/txt_chitiet_tindang_songuoio"
                            style="@style/Paragraph_Bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="2"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả tin đăng"
                    style="@style/Paragraph_Bold_black"
                    tools:ignore="HardcodedText"/>
                <TextView
                    android:id="@+id/txt_chitiet_tindang_mota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:gravity="start|top"
                    android:background="@drawable/customer_edittext_greyborder_radius_5dp"
                    android:layout_marginTop="10dp"
                    android:minLines="10"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiện ích"
                    tools:ignore="HardcodedText" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/recycleview_chitiet_tindang_tienich">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>