<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:id="@+id/recycleview_timkiem_filter"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingStart="7dp"
    android:paddingEnd="7dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:elevation="5dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/customer_button_redborder_radius_30dp"
    tools:ignore="Orientation">
    <TextView
        android:id="@+id/txt_recycleview_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="Loại phòng"
        style="@style/Paragraph_Regular_black"
        tools:ignore="HardcodedText,TextContrastCheck" />
    <ImageButton
        android:id="@+id/imgbtn_recycleview_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow"
        android:rotation="90"
        android:tint="@color/grey_text"
        tools:ignore="ContentDescription,UseAppTint,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</LinearLayout>