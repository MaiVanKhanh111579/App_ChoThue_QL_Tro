<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fg_khachhang_thongbao"
    android:paddingTop="40dp"
    tools:ignore="Orientation,UseCompoundDrawables"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading_1_Bold_black"
            android:text="Thông báo đặt cọc"
            tools:ignore="HardcodedText"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_khachhang_thongbao_thoat"
            style="@style/Paragraph_Regular_black"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/customer_button_redborder_radius_30dp"
            android:backgroundTint="@color/grey_background"
            android:padding="0dp"
            android:text="Thoát"
            app:backgroundTint="@null"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/customer_line"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycleview_khachhang_thongbao"/>
</LinearLayout>