<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:background="@color/white"
    android:id="@+id/fragment_taikhoan_timkiem">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:scrollbars="none"
        tools:ignore="ScrollViewCount">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llayout_taikhoan_timkiem_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                tools:ignore="Orientation,UselessParent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    tools:ignore="UseCompoundDrawables,UselessLeaf,UselessParent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_taikhoan_timkiem_avatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/ic_user"
                        tools:ignore="ContentDescription" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_taikhoan_timkiem_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Heading_1_Bold_black"
                            android:text="User Name"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlHardcoded" />
                        <TextView
                            android:id="@+id/txt_taikhoan_timkiem_mataikhoan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Heading_3_Regular_black"
                            android:text="Mã tài khoản:"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="end">
                    <LinearLayout
                        android:id="@+id/llayout_taikhoan_chuyensangdangtin"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/customer_background_noborder_radius_10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        tools:ignore="ObsoleteLayoutParam">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_switch"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuyển sang đăng tin"
                            style="@style/Paragraph_Regular_black"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llayout_taikhoan_chuyensangtimkiem"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/customer_background_noborder_radius_10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_marginTop="20dp"
                        tools:ignore="ObsoleteLayoutParam">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_switch"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuyển sang tìm kiếm"
                            style="@style/Paragraph_Regular_black"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_line"/>
            </LinearLayout>

            <!--Hướng dẫn-->
            <LinearLayout
                android:id="@+id/llayout_taikhoan_timkiem_huongdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/llayout_taikhoan_timkiem_top">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Bold_black"
                        android:textColor="@color/red99"
                        android:text="Quản lý phòng trọ"
                        android:layout_marginBottom="10dp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/txt_taikhoan_timkiem_taiChinhvadichVu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Tài chính và dịch vụ"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Quy định phòng trọ"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        style="@style/Heading_3_Regular_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text="Hợp đồng và điều khoản"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:layout_marginBottom="7dp"
                        android:text="Bảo trì phòng trọ"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:text="Báo cáo phòng trọ"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayout_taikhoan_timkiem_quydinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/llayout_taikhoan_timkiem_huongdan">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Bold_black"
                        android:textColor="@color/red99"
                        android:text="Quy định"
                        android:layout_marginBottom="10dp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Điều khoản thoả thuận"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Chính sách bảo mật"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:text="Chính sách hỗ trợ"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_line"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llayout_taikhoan_timkiem_quanlytaikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/llayout_taikhoan_timkiem_quydinh">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Bold_black"
                        android:textColor="@color/red99"
                        android:text="Quản lý tài khoản"
                        android:layout_marginBottom="10dp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/txt_timkiem_taikhoan_thongtintaikhoan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Thông tin tài khoản"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        android:id="@+id/txt_timkiem_taikhoan_matkhauvabaomat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Mật khẩu và bảo mật"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                    <TextView
                        android:id="@+id/txt_timkiem_taikhoan_dangxuat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Regular_black"
                        android:drawablePadding="10dp"
                        android:text="Đăng xuất"
                        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_line"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>