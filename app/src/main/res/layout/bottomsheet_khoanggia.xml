<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khoảng giá"
        style="@style/Heading_2_Bold_black"
        android:paddingBottom="8dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <RadioGroup
        android:id="@+id/rg_price_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rb_price_500k_1999k"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="500,000 - 1,999,999"
            style="@style/Heading_3_Regular_black"
            android:padding="12dp"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/rb_price_2000k_2999k"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="2,000,000 - 2,999,999"
            style="@style/Heading_3_Regular_black"
            android:padding="12dp"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/rb_price_3000k_3999k"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="3,000,000 - 3,999,999"
            style="@style/Heading_3_Regular_black"
            android:padding="12dp"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/rb_price_4000k_4999k"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="4,000,000 - 4,999,999"
            style="@style/Heading_3_Regular_black"
            android:padding="12dp"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/rb_price_above_5m"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Trên 5 triệu"
            style="@style/Heading_3_Regular_black"
            android:padding="12dp"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_apply_price_range"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Áp dụng"
        style="@style/Heading_3_Regular_black"
        android:background="@drawable/customer_button_redborder_radius_10dp"
        app:backgroundTint="@null"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText,MissingConstraints" />
</LinearLayout>