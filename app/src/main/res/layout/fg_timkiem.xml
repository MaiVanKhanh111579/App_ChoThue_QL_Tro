<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/llayout_timkiem_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/grey_background"
        android:gravity="center"
        android:paddingTop="40dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edt_timkiem_search"
            style="@style/Paragraph_Regular_black"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/customer_button_redborder_radius_10dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Tìm kiếm thành phố, giá..."
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="text"
            android:maxLines="1"
            android:elevation="5dp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlSymmetry,TextFields,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview_timkiem_filter"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llayout_timkiem_sub_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/llayout_timkiem_toolbar">

        <TextView
            android:id="@+id/txt_timkiem_tongphongtro"
            style="@style/Paragraph_Regular_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,000 phòng / nhà trọ"
            tools:ignore="HardcodedText,TextContrastCheck" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_timkiem_sapxep"
            style="@style/Paragraph_Regular_black"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:background="@drawable/customer_button_redborder_radius_10dp"
            android:drawableEnd="@drawable/ic_filter"
            android:text="Sắp xếp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/grey_text"
            app:backgroundTint="@null"
            android:drawableTint="@color/grey_text"
            tools:ignore="HardcodedText,SmallSp,TextContrastCheck,TouchTargetSizeCheck,UseCompatTextViewDrawableXml" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_timkiem_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llayout_timkiem_sub_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>