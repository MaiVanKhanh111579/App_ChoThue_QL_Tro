<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/grey_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/qltindang_show_chedo_nguoixem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/btn_qltindang_show_chedo_nguoixem_thoat"
            style="@style/Paragraph_Regular_black"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/customer_button_redborder_radius_10dp"
            android:backgroundTint="@color/grey_background"
            android:text="Thoát"
            app:backgroundTint="@null"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="50dp"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables,UselessLeaf,UselessParent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="@null"
                android:background="@color/white">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleview_qltindang_show_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    tools:ignore="TextSizeCheck" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txt_qltindang_show_tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề"
                android:maxLines="2"
                android:minLines="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                style="@style/Heading_2_Regular_black"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_recycleview_qltindang_giatien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red99"
                    android:text="1.500.000 VNĐ/tháng"
                    style="@style/Heading_2_Bold_black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    style="@style/Heading_2_Regular_black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/txt_recycleview_qltindang_dientich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red99"
                    android:text="12 m2"
                    style="@style/Heading_2_Regular_black"
                    tools:ignore="HardcodedText"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_qltindang_show_songuoio"
                    style="@style/Paragraph_Regular_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person_20dp"
                    android:drawableTint="@color/grey_text"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/grey_text"
                    tools:ignore="ContentDescription,HardcodedText,UseCompatTextViewDrawableXml,TextContrastCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_recycleview_qltindang_diachihienthi"
                style="@style/Heading_3_Regular_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa chỉ hiển thị"
                android:maxLines="1"
                android:textColor="@color/grey_text"
                tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_qltindang_show_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_user"
                    tools:ignore="ContentDescription,ImageContrastCheck" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_qltindang_show_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Heading_3_Bold_black"
                        android:textColor="@color/black"
                        android:text="user name"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/txt_qltindang_show_ngaydang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Paragraph_Regular_black"
                        android:textColor="@color/black"
                        android:text="ngày đăng"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_qltindang_show_xemchitiet"
                    style="@style/Paragraph_Regular_black"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:padding="0dp"
                    android:background="@drawable/customer_button_redborder_radius_30dp"
                    android:backgroundTint="@color/red99"
                    android:text="Xem chi tiết"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/imgbtn_qltindang_show_luutin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_heart"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>